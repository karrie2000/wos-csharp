@model List<Movie>;

@{
    var movies = Model;
}

<div class="card shadow">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Buff</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in movies)
                {
                    <tr>
                        <td><a href="/movies/@movie.MovieId">@movie.Title</a></td>
                        <td></td>
                        <td>
                            <a href="/movies/@movie.MovieId/edit" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/movies/@movie.MovieId/delete" class="btn btn-sm btn-warning">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
