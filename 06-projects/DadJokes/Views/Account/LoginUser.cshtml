@using Microsoft.AspNetCore.Identity

@inject SignInManager<DadJokeUser> SignInManager
@inject UserManager<DadJokeUser> UserManager

@{
    ViewData["Title"] = "Login";
}

<div class="card bg-base-200 shadow-lg">
    <div class="card-body">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"
                    title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                    asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                </form>
            </li>
        }
        else
        {

            <li class="nav-item">
                <button type="button" class="btn btn-primary" onclick="RegisterModal.showModal()">Register</button>
            </li>
            <li class="nav-item">
                <button type="button" class="btn btn-primary">Login</button>
            </li>
        }
    </div>
</div>

<partial name="_Register.cshtml" />